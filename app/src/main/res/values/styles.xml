<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@color/dim_gray</item>
        <item name="tint">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Fab_LogOut_Style" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@color/dim_gray</item>
        <item name="tint">@color/red</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CreateWorkoutFont">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/selector</item>
        <item name="itemTextColor">@color/selector</item>
        <item name="backgroundTint">@color/black</item>
        <item name="itemRippleColor">@color/gray2</item>
    </style>

    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/green</item>
        <item name="cornerRadius">20dp</item>
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">8dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/dodger_blue</item>
        <item name="colorAccent">@color/white</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>

    <style name="Toolbar_TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Toolbar_SubtitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>